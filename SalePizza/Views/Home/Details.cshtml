@using SalePizza.Models;
@model Cart

@{
    Layout = null;
}

@*
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
@*@Scripts.Render("~/bundles/modalwindow")*@

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" align="center">Корзина</h4>
        </div>
        <div class="modal-body">
            <div class="dl-horizontal">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Название</th>
                            <th scope="col">Цена</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{ int g = 1; }
                        @foreach (var pizza in Model.Pizzas)
                        {
                            <tr>
                                <td>@g</td>
                                <td>
                                    @pizza.Name
                                </td>
                                <td>
                                    @pizza.Price
                                </td>
                            </tr>
                            g++;
                        }
                    </tbody>
                </table>
            </div>

            <h4>Адрес:</h4>

            <dl class="dl-horizontal">

                <dt>Город:</dt>
                <dd>
                    <select size="1">
                        <option>Полоцк</option>
                        <option>Новополоцк</option>
                    </select>
                </dd>

                <dt>Улица:</dt>
                <dd><input type="text" /></dd>

                <dt>Дом:</dt>
                <dd><input type="text" /></dd>

                <dt>Квартира:</dt>
                <dd><input type="text" /></dd>

                <div class="box_total_number">
                    ВСЕГО:
                    <span> @Model.AverageCost </span>
                    <span> руб. </span>
                </div>
            </dl>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
            <button type="button" class="btn btn-primary">Заказать</button>
        </div>
    </div>

